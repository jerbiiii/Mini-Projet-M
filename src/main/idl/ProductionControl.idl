module ProductionControlModule {

    // Structure pour les données de composant
    struct ComponentData {
        string componentId;
        string type;
        string producedBy;
        boolean isDefective;
    };

    // Interface callback pour les stations d'assemblage
    interface IStationCallback {
        boolean receiveComponent(in ComponentData data);
        string getStationId();
    };

    // Interface principale du contrôleur de production
    interface IProductionControl {
        // Gestion des machines
        boolean registerMachine(in string machineId, in string machineType);
        string notifyFailure(in string machineId, in string errorType);
        boolean notifyRepair(in string machineId);  // NOUVEAU
        boolean requestProductionStart(in string machineId);
        boolean requestProductionStop(in string machineId);
        string getMachineStatus(in string machineId);

        // Gestion des composants
        boolean deliverComponent(in ComponentData compData);

        // Gestion des stations
        boolean registerAssemblyStation(in string stationId, in IStationCallback callback);
        void notifyStorageAlert(in string zoneId, in long level);

        // Monitoring
        string getSystemStatus();
    };
};